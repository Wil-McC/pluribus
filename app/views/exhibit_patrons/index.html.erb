<h1>Patrons in <%=link_to(@exhibit.name,"/exhibits/#{@exhibit.id}")%></h1>
<%= link_to("Create Patron", "/exhibits/#{@exhibit.id}/patrons/new") %>
<%= link_to("Sort Patrons alphabetically by name","/exhibits/#{@exhibit.id}/patrons?search_type=alphabetical") %>
<h2> Search By Age </h2>
<%= form_tag("/exhibits/#{@exhibit.id}/patrons", method: "get") do %>
<p><%= label_tag(:age, "Filter by age - Greater Than:") %>
  <%= text_field_tag(:age) %>
  <%= submit_tag("Enter age threshold") %>
  <% end %>
<ul>
  <h2><%= @exhibit.patron_count %> patrons are inside the exhibit</h2>
  <% @patrons.each do |patron| %>
    <li>
      <h3><%= link_to patron.name, "/patrons/#{patron.id}" %></h3>
      <p>Age: <%= patron.age %></p>
      <p>Paid: <%= patron.paid %></p>
    </li>
  <% end %>
</ul>
