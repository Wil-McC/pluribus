<form action="/museums" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new museum:</p>
  <label for="name">Museum Name:</label><br>
  <input type='text' id='name' name='museum[name]'/><br/>
  <p>Museum open status:</p>
  <!-- RADIOS do NOT return true or false values  -->
  <input type="radio" id="open" name="museum[open]" value="open">
  <label for="open">Open</label><br>
  <input type="radio" id="closed" name="museum[open]" value="closed">
  <label for="closed">Closed</label><br>
  <label for="cost">Entry Cost:</label><br>
  <input type="number" id="cost" name="museum[cost]" value="6"><br>
  <input type='submit'/>
</form>
